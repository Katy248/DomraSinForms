@page "/forms"
<h1 class="display-1 text-center">Your forms</h1>

<div class="d-flex justify-content-center">

    <div class="btn-group">
        @for (int i = 0; i < 10; i++)
        {
            <button class="btn @(i == 3 ? "btn-primary" : "btn-secondary")">
                @(i + 1)
            </button>
        }
    </div>
</div>

<div class="row">

    @for (int i = 0; i < 10; i++)
    {
        <div class="col-12 col-md-6 col-xl-4 g-3">
            <div class="card">
                <div class="card-body">
                    <div class="mb-3">
                        <h5 class="card-title">
                            Some title
                        </h5>
                        <div class="card-subtitle text-body-secondary">
                            Last edit yesterday
                        </div>
                    </div>
                    <div class="card-text">
                        Lorem ipsum dolor sit amet, consectetur adipisicing elit. Accusamus accusantium beatae blanditiis consequatur, delectus, eligendi fugiat illum impedit laudantium quia, rem repellendus reprehenderit soluta tempore tenetur ut velit vitae voluptatibus?
                    </div>
                    <div class="d-flex flex-column gap-1 justify-content-center mt-4">
                        <a class="btn btn-secondary">
                            <i class="fas fa-edit"></i>
                            Edit
                        </a>
                        <a class="btn btn-info">
                            <i class="fas fa-copy"></i>
                            Copy link
                        </a>
                        <a class="btn btn-danger">
                            <i class="fas fa-trash"></i>
                            Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>