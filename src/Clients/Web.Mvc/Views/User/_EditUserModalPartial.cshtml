@using DomraSinForms.Application.Users.Commands.Update;
@inject IViewLocalizer Localizer
@model UpdateUserCommand
@{
    var modalId = ViewData["ModalId"] as string ?? $"editUserModal";
}

<div class="modal" id="@modalId">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content p-1">

            <div class="modal-body justify-content-center">

                <div class="h2 mb-5 text-center">
                    @Localizer["Change user data"]
                </div>

                <form asp-controller="User" asp-action="Edit" method="post">
                    <input asp-for="Id" hidden/>

                    <div class="form-group mb-2">
                        <label class="form-label">
                            @Localizer["Username"]
                            <span class="text-muted">@Localizer["(Only Latin letters are allowed)"]</span>
                        </label>
                        <input class="form-control" type="text" asp-for="Username" />
                    </div>

                    <div class="form-group mb-2">
                        <label class="form-label">@Localizer["Email"]</label>
                        <input class="form-control" type="email" asp-for="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-2">
                        <label class="form-label">
                            @Localizer["Nick"] 
                            <span class="text-muted">@Localizer["(Optional)"]</span>
                        </label>
                        <input class="form-control" type="text" asp-for="NickName" />
                    </div>

                    <div class="form-group mb-2">
                        <input class="form-control btn btn-primary" type="submit" value="@Localizer["Save"]" />
                    </div>

                </form>

            </div>

        </div>
    </div>
</div>