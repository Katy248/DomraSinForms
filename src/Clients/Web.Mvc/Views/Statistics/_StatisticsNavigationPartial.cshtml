@inject IViewLocalizer Localizer
<ul class="nav nav-pills justify-content-center">
    <li class="nav-item">
        <a class="nav-link @(ViewData["Title"] as string == Localizer["Form answers"]?.Value ? "active" : "")" asp-action="Summary" asp-route-formId="@Model.FormId">@Localizer["Summary"]</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(ViewData["Title"] as string == Localizer["All answers"]?.Value ? "active" : "")" asp-action="FormAnswersList" asp-route-formId="@Model.FormId">@Localizer["All answers"]</a>
    </li>
</ul>

