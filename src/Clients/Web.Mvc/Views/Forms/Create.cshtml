@using Microsoft.AspNetCore.Identity;
@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer
@model DomraSinForms.Application.Forms.Commands.Create.CreateFormCommand

@{
    ViewData["Title"] = @Localizer["New form"]?.Value;
}


<div class="row justify-content-center">
    <div class="col-12 display-5 mb-5 text-center">@Localizer["New form"]</div>
    <div class="col-sm-10 col-md-8 col-xl-6 row g-3">
        <form asp-action="Create" method="post">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <input asp-for="CreatorId" class="form-control"  hidden/>
            <div class="form-group mb-2">
                <input asp-for="Title" class="form-control form-control-lg" placeholder="@Localizer["Title"]" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input asp-for="Description" class="form-control" placeholder="@Localizer["Description"]" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input class="btn btn-primary form-control" type="submit" value="@Localizer["Create"]" />
            </div>
        </form>
    </div>
</div>

<h4 class="h5 text-center mt-5">
    <a class="nav-link" asp-action="Index"><i class="bi-arrow-left me-2"></i>@Localizer["Back to list"]</a>
</h4>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
